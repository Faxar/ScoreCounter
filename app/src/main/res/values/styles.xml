<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="alertDialogTheme">@style/MyDialog</item>
    </style>

    <style name="MyToolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/toolbarTextColor</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:layout_marginRight">@dimen/list_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/list_horizontal_margin</item>
    </style>

    <!--
        Edit Dialog Field Styles - SeekBar, TextView, EditText
    -->
    <style name="Rubik">
        <item name="fontFilePattern">fonts/Rubik-Light.ttf</item>
        <item name="fontFamily">BloggerSans</item>
        <item name="fontVariant">Light</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>
    <style name="Rubik.Bold" parent="Rubik">
        <item name="fontVariant">Medium</item>
        <item name="fontFilePattern">fonts/Rubik-Medium.ttf</item>
        <item name="android:textSize">@dimen/text_size_value</item>
    </style>

    <style name="MySeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:layout_marginTop">@dimen/seekbar_margin</item>
        <item name="android:layout_marginBottom">@dimen/seekbar_margin</item>
        <item name="android:max">255</item>
    </style>

    <style name="MySeekBar.Red" parent="MySeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress_red</item>
        <item name="android:thumb">@drawable/seekbar_circle_red</item>
    </style>

    <style name="MySeekBar.Green" parent="MySeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress_green</item>
        <item name="android:thumb">@drawable/seekbar_circle_green</item>
    </style>

    <style name="MySeekBar.Blue" parent="MySeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress_blue</item>
        <item name="android:thumb">@drawable/seekbar_circle_blue</item>
    </style>

    <style name="dialog_edit_text_with_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">20</item>
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:minEms">20</item>
    </style>

</resources>
