<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/color_header"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/accentColor"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <EditText
                android:id="@+id/counter_caption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:maxLength="10"
                android:maxLines="1"
                android:minEms="10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingStart="16dp">

            <SeekBar
                android:id="@+id/redSeekBar"
                style="@style/MySeekBar.Red"
                android:splitTrack="false"/>

            <SeekBar
                android:id="@+id/greenSeekBar"
                style="@style/MySeekBar.Green"
                android:splitTrack="false"/>

            <SeekBar
                android:id="@+id/blueSeekBar"
                style="@style/MySeekBar.Blue"
                android:splitTrack="false"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/flipCounterSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Flip counter"/>

            <com.gregacucnik.EditableSeekBar
                android:id="@+id/currentValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:esbMax="999"
                app:esbMin="-99"
                app:esbSelectAllOnFocus="false"
                app:esbTitle="@string/counter_dialog_counter_value"/>

            <com.gregacucnik.EditableSeekBar
                android:id="@+id/step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:esbMax="100"
                app:esbMin="1"
                app:esbSelectAllOnFocus="false"
                app:esbTitle="@string/counter_dialog_step"
                app:esbValue="1"/>

            <com.gregacucnik.EditableSeekBar
                android:id="@+id/defaultValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:esbMax="999"
                app:esbMin="-999"
                app:esbSelectAllOnFocus="false"
                app:esbTitle="@string/counter_dialog_default_value"
                app:esbValue="0"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>