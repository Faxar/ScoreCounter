<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp">

    <com.gregacucnik.EditableSeekBar
        android:id="@+id/dice_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:esbMax="100"
        app:esbMin="1"
        app:esbSelectAllOnFocus="false"
        app:esbTitle="@string/dice_dialog_number"
        app:esbValue="1"/>

    <com.gregacucnik.EditableSeekBar
        android:id="@+id/dice_min_edge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:esbMax="100"
        app:esbMin="-100"
        app:esbSelectAllOnFocus="false"
        app:esbTitle="@string/dice_dialog_min_side"
        app:esbValue="1"/>

    <com.gregacucnik.EditableSeekBar
        android:id="@+id/dice_max_edge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:esbMax="100"
        app:esbMin="-100"
        app:esbSelectAllOnFocus="false"
        app:esbTitle="@string/dice_dialog_max_side"
        app:esbValue="1"/>

    <com.gregacucnik.EditableSeekBar
        android:id="@+id/dice_total_bonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:esbMax="100"
        app:esbMin="-100"
        app:esbSelectAllOnFocus="false"
        app:esbTitle="@string/dice_dialog_total_bonus"
        app:esbValue="1"/>

</LinearLayout>