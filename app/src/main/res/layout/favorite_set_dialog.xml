<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/color_header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <EditText
            android:id="@+id/favorite_set_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Counter name"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:minEms="20"
            android:padding="16dp"
            android:textSize="@dimen/dialog_title_text_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        >

        <SeekBar
            android:id="@+id/red_seekbar"
            style="@style/MySeekBar.Red"
            android:splitTrack="false"
            tools:ignore="UnusedAttribute"/>

        <SeekBar
            android:id="@+id/green_seekbar"
            style="@style/MySeekBar.Green"
            android:splitTrack="false"
            tools:ignore="UnusedAttribute"/>

        <SeekBar
            android:id="@+id/blue_seekbar"
            style="@style/MySeekBar.Blue"
            android:splitTrack="false"
            tools:ignore="UnusedAttribute"/>

    </LinearLayout>
</LinearLayout>
