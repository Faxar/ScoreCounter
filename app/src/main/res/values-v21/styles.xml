<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MySeekBar.Blue" parent="MySeekBar">
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:progressTint">@color/blue</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>
    <style name="MySeekBar.Green" parent="MySeekBar">
        <item name="android:thumbTint">@color/green</item>
        <item name="android:progressTint">@color/green</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>
    <style name="MySeekBar.Red" parent="MySeekBar">
        <item name="android:thumbTint">@color/red</item>
        <item name="android:progressTint">@color/red</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="alertDialogTheme">@style/MyDialog</item>
        <item name="android:navigationBarColor">@color/black</item>

    </style>
</resources>